extends layout

block content
  .container
    .row
        .col-sm-9
            input(class="form-control", id="search-disease", type="text", placeholder="Disease name")
        .col-sm-3
            select(class="form-control", id='search-type')
                option(value='1') Disease -> Drug -> Gene
    
    .row.statistics
        .col-sm-4
            .diseases

        .col-sm-4
            .drugs
                

        .col-sm-4
            .genes
                